<?xml version='1.0' encoding='utf-8'?>
<widget id="com.yamblz.shriple" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SHRIple</name>
    <description>
        SHRI + people = SHRIple
    </description>
    <author email="cybri0nix@yandex.ru" href="http://cordova.io">
        Dream Technologies
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="orientation" value="portrait" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="res/icon/ios/icon-180.png" width="180" />
        <icon height="60" src="res/icon/ios/icon-72.png" width="60" />
        <icon height="120" src="res/icon/ios/icon-144.png" width="120" />
        <icon height="76" src="res/icon/ios/icon-72.png" width="76" />
        <icon height="152" src="res/icon/ios/icon-180.png" width="152" />
        <icon height="40" src="res/icon/ios/icon-57.png" width="40" />
        <icon height="80" src="res/icon/ios/icon-114.png" width="80" />
        <icon height="57" src="res/icon/ios/icon-57.png" width="57" />
        <icon height="114" src="res/icon/ios/icon-114.png" width="114" />
        <icon height="72" src="res/icon/ios/icon-72.png" width="72" />
        <icon height="144" src="res/icon/ios/icon-144.png" width="144" />
        <icon height="29" src="res/icon/ios/icon-57.png" width="29" />
        <icon height="58" src="res/icon/ios/icon-57.png" width="58" />
        <icon height="50" src="res/icon/ios/icon-57.png" width="50" />
        <icon height="100" src="res/icon/ios/icon-114.png" width="100" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <engine name="browser" spec="^4.1.0" />
    <engine name="ios" spec="^4.4.0" />
    <plugin name="cordova-plugin-dialogs" spec="^1.3.3" />
    <plugin name="cordova-plugin-statusbar" spec="^2.2.3" />
    <plugin name="cordova-plugin-vibration" spec="^2.1.5" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-x-socialsharing" spec="^5.1.8" />
    <plugin name="cordova-plugin-x-toast" spec="^2.6.0" />
</widget>
